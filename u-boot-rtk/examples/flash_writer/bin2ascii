	    print "0x". $len[6] . $len[7]. $len[4]. $len[5]. $len[2]. $len[3]. $len[0]. $len[1]. ",\\\n";
	    print "0x". $len_uboot2[6] . $len_uboot2[7]. $len_uboot2[4]. $len_uboot2[5]. $len_uboot2[2]. $len_uboot2[3]. $len_uboot2[0]. $len_uboot2[1]. ",\\\n";
