	        @c = map ord, split //, $bytes;
	        read(BINARY, $bytes, 1);
	        @d = map ord, split //, $bytes;
	        
	        #need not inverse
	        printf "0x%02x", @d;
	        printf "%02x", @c;
	        printf "%02x", @b;
	        printf "%02x", @a;



    		# read(BINARY, $bytes, 4);
    		# @a = map ord, split //, $bytes;
    		# printf "0x%02x%02x%02x%02x", @a;

        	$current++;
	        if($current < $size)
	        { print ","}
