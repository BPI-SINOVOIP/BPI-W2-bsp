        print "\nbootcode3_boot_hasharray_end:\n.word 0\n";
	}   
    
    if(defined $bootcode3_boot_signature)
    {
    	open BINARY, $bootcode3_boot_signature or die $!;

	    # in the for();
	    # (map ord, split //, $bytes) will generate a list
